{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run TypeScript",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/dist/main.js",
            "outFiles": ["${workspaceFolder}/dist/src/**/*.js", "${workspaceFolder}/dist/src/**/*.js.map"],
            "sourceMaps": true,
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**/*.ts"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/main.ts"],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}
